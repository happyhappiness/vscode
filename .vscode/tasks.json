{
    "version": "0.1.0",
    "command": "clang++",
    "isShellCommand": true,
    "args": ["-g","-std=c++11", "${file}"],
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "default",
            "isBuildCommand": true,
            "suppressTaskName": true,
            "problemMatcher": [
                "$tsc",
                "$lessCompile"
            ]
        },
         {
            "taskName": "simplex",
            "args": ["${workspaceRoot}/simplex/dualSimplex.cpp"],
            "isBuildCommand": true,
            "suppressTaskName": true,
            "problemMatcher":[
                "$tsc",
                "$lessCompile"
            ]
        }
    ]
}